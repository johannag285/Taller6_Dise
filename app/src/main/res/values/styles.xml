<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Mitema" parent="Theme.AppCompat.NoActionBar" />

    <style name="johanna">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/amber_300</item>
        <item name="android:colorBackground">@color/teal_a200</item>
        <item name="android:text">@string/backdrop_title</item>
        <item name="android:imageWellStyle">@style/CardView.Dark</item>
    </style>

    <style name="johannag">
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="JohannaTema" parent="Theme.AppCompat.DayNight.Dialog" >
        <item name="android:colorBackground">@color/colorBackgroundFloating</item>
    </style>

</resources>
