<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/JohannaTema"
    tools:context=".SerieDetailActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenSerie"
                android:layout_width="match_parent"
                android:layout_height="220dp" />


            <TextView
                android:id="@+id/txtTemporadas"
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />



            <Spinner
                android:id="@+id/listaTemporadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp"/>

            <TextView
                android:id="@+id/txtCapitulos"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


            <ListView
                android:id="@+id/listaCapitulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#000000" />

            <TextView
                android:id="@+id/descripcionCapitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n Capitulo: "
                android:textColor="#000000"
                android:textSize="18dp" />



        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>